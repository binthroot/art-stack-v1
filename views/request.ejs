<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= request.requestName %></h2>
      <div class="row justify-content-between">
        
        <form
          class="col-1"
          action="/post/likePost/<%= request.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= request.likes %></h3>
        <%if(request.user == user.id){ %>
        <form
          action="/request/deletePost/<%= request.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= request.descriptionTaste %></p>
    </div>

    <!-- Create comments -->

    <div class="mt-5">
      <h2>Add a comment</h2>
      <form action="/comment/createComment/<%=request._id%>" method="POST">
        <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <!-- Name gives us a req.body.comment to use in our controller -->
            <input type="text" class="form-control" id="comment" name="comment">
        </div>
        <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
      </form>
    </div>

    <!-- Comments here -->
    <ul>
      <% for(var i=0; i<comments.length; i++) {%>
        <p class="col-6 justify-content-between mt-5">
          <% console.log(comments[i]._id) %> 
          <p><%= comments[i].comment %></p>
          <p><%= comments[i].likes %></p>
          <form
          class="col-1"
          action="/comment/likeComment/<%=comments[i]._id%>?_method=PUT&request=<%=request._id%>"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <form
        action="/comment/deleteComment/<%= comments[i]._id %>?_method=DELETE&post=<%=post._id%>"
        method="POST"
        class="col-3"
      >
        <button class="btn btn-primary fa fa-trash" type="submit"></button>
      </form>  
        </li>
      <% } %>
      <!-- TODO add likes to comment-->
    </ul>

    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>